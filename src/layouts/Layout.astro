---
import { Background } from "../components/Background"

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title && `${title} Â· `}Web-Made Games</title>
</head>

<body>
  <Background client:only />

  <main role="main">
    <slot />
  </main>
</body>

</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Bitter:wght@400;800&family=Roboto:wght@400&display=swap');

  :root {
    --font-size-base: 18px;
    --font-size-lg: 150%;
    --font-size-xl: 200%;
    --color-text: hsl(300, 20%, 30%);
    --color-bg: hsl(300, 20%, 95%);
  }

  html {
    font-family: Roboto, system-ui, sans-serif;
    font-size: var(--font-size-base);
    line-height: 1.5;
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
    padding: 5rem 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: Bitter, system-ui, sans-serif;
  }

  main[role="main"] {
    margin: auto;
    padding: 3rem;
    max-width: 100ch;
    background-color: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(20px);
    box-shadow: rgba(0, 0, 0, 0.2) 0 0 40px;
  }

  main[role="main"]>*:first-child {
    margin-top: 0
  }

  h1 {
    font-size: var(--font-size-xl);
    color: hsl(300, 80%, 40%);
  }

  h2 {
    font-size: var(--font-size-lg);
    color: hsl(300, 60%, 30%);
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
